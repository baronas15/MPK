<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:id="@+id/drawer_layout_1"
    android:background="@color/colorPrimaryLight">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/drawer_item_1"
        android:layout_weight="25"
        android:background="@color/blue_200">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/mpk"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_item"
        android:id="@+id/drawer_item_2"
        android:layout_marginLeft="@dimen/nav_drawer_edge_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_item_height"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="@dimen/nav_drawer_icon_size"
                android:layout_height="wrap_content"
                android:src="@drawable/house"
                android:layout_marginRight="@dimen/nav_drawer_edge_margin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Grįžti"
                android:textColor="@color/primaryText"
                android:layout_weight="8"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_item"
        android:id="@+id/drawer_item_3"
        android:layout_marginLeft="@dimen/nav_drawer_edge_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_item_height"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="@dimen/nav_drawer_icon_size"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_school_black_36dp"
                android:layout_marginRight="@dimen/nav_drawer_edge_margin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Išmok medituoti"
                android:textColor="@color/primaryText"
                android:layout_weight="8"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_item"
        android:id="@+id/drawer_item_4"
        android:layout_marginLeft="@dimen/nav_drawer_edge_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_item_height"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="@dimen/nav_drawer_icon_size"
                android:layout_height="wrap_content"
                android:src="@drawable/pinklotus"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/nav_drawer_edge_margin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Meditacijos"
                android:textColor="@color/primaryText"
                android:layout_weight="8"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_item"
        android:id="@+id/drawer_item_5"
        android:layout_marginLeft="@dimen/nav_drawer_edge_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_drawer_item_height"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="@dimen/nav_drawer_icon_size"
                android:layout_height="wrap_content"
                android:src="@drawable/pergament"
                android:adjustViewBounds="true"
                android:layout_marginRight="@dimen/nav_drawer_edge_margin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pažanga"
                android:textColor="@color/primaryText"
                android:layout_weight="8"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_item_6"
        android:paddingLeft="@dimen/item_vertical_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rėmėjai"
            android:textColor="@color/primaryText"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/nav_drawer_content_divider"
        android:layout_marginLeft="@dimen/nav_drawer_edge_margin"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/drawer_item_7"
            android:layout_gravity="left"
            android:minHeight="48dp"
            android:layout_marginRight="@dimen/nav_drawer_content_divider">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:src="@drawable/kaunas"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/drawer_item_8"
            android:minHeight="48dp"
            android:layout_marginLeft="@dimen/nav_drawer_content_divider">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:src="@drawable/kmvsb_land"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>