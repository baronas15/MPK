<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/main_title1"
                android:textSize="@dimen/material_text_headline"
                android:gravity="top|center_horizontal"
                android:textColor="@color/primaryTextInverted"
                android:background="@color/colorPrimary"
                android:paddingLeft="@dimen/side_padding_portrait"
                android:paddingRight="@dimen/side_padding_portrait"
                android:paddingTop="@dimen/item_vertical_padding"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingLeft="@dimen/side_padding_portrait"
                android:paddingRight="@dimen/side_padding_portrait"
                android:paddingTop="@dimen/item_vertical_padding"
                android:paddingBottom="@dimen/item_vertical_padding"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:weightSum="2"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:weightSum="12"
                        android:layout_marginRight="@dimen/little_separator"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@string/main_text1"
                            android:textColor="@color/primaryTextInverted"
                            android:textSize="@dimen/material_text_body1"
                            android:layout_weight="10"
                            android:typeface="sans"/>
                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <Button
                                style="@style/btnlook"
                                android:id="@+id/activity_main_button1"
                                android:text="@string/main_button1"
                                android:layout_gravity="left"
                                android:layout_marginLeft="0dp"/>
                        </FrameLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/little_separator">

                        <ImageView
                            android:src="@drawable/lotus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/img_description1"
                            android:adjustViewBounds="true" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/side_padding_portrait"
                android:paddingRight="@dimen/side_padding_portrait"
                android:background="@drawable/layout_button_color_primary_light"
                android:layout_weight="2"
                android:clickable="true"
                android:id="@+id/activity_main_item1"
                android:paddingBottom="@dimen/item_vertical_padding"
                android:paddingTop="@dimen/item_vertical_padding"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_button2"
                        android:layout_gravity="start|center"
                        android:clickable="false"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/material_text_subhead"
                        android:typeface="serif" />
                    <ImageView
                        android:src="@drawable/arrow"
                        android:layout_width="@dimen/arrowSize"
                        android:layout_height="@dimen/arrowSize"
                        android:contentDescription="@string/img_description2"
                        android:layout_gravity="center_vertical|end"
                        android:duplicateParentState="true"/>
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:clickable="false"
                android:background="@color/blue_A100" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/side_padding_portrait"
                android:paddingRight="@dimen/side_padding_portrait"
                android:background="@drawable/layout_button_color_primary_light"
                android:layout_weight="2"
                android:clickable="true"
                android:id="@+id/activity_main_item2"
                android:paddingTop="@dimen/item_vertical_padding"
                android:paddingBottom="@dimen/item_vertical_padding">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_button3"
                        android:layout_gravity="start|center"
                        android:clickable="false"
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/material_text_subhead"
                        android:typeface="serif"
                        android:duplicateParentState="true"/>
                    <ImageView
                        android:src="@drawable/arrow"
                        android:layout_width="@dimen/arrowSize"
                        android:layout_height="@dimen/arrowSize"
                        android:contentDescription="@string/img_description2"
                        android:layout_gravity="center_vertical|end"
                        android:duplicateParentState="true"/>
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:clickable="false"
                android:background="@color/blue_A100" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/side_padding_portrait"
                android:paddingRight="@dimen/side_padding_portrait"
                android:background="@drawable/layout_button_color_primary_light"
                android:layout_weight="2"
                android:clickable="true"
                android:id="@+id/activity_main_item3"
                android:paddingTop="@dimen/item_vertical_padding"
                android:paddingBottom="@dimen/item_vertical_padding">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_button4"
                        android:layout_gravity="start|center"
                        android:clickable="false"
                        android:textColor="@color/primaryText"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/material_text_subhead"
                        android:typeface="serif"
                        android:duplicateParentState="true"/>
                    <ImageView
                        android:src="@drawable/arrow"
                        android:layout_width="@dimen/arrowSize"
                        android:layout_height="@dimen/arrowSize"
                        android:contentDescription="@string/img_description2"
                        android:layout_gravity="center_vertical|end"
                        android:duplicateParentState="true"/>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>