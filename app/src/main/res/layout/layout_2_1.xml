<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/colorPrimaryLight">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="KAS YRA DĖMESINGAS ĮSISĄMONINIMAS IR MEDITACIJA"

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Dėmesingas įsisąmoninimas – tai būdas sutelkti dėmesį į tai, kas vyksta dabar, stebint tai, kas vyksta viduje (jūsų mintys, jausmai ir fiziniai pojūčiai) ir išorėje (jūsų bendravimas ir aplinka), be išankstinio nusistatymo ir neteisiant."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Dėmesingas įsisąmoninimas padeda mums susikaupti ir išlikti šioje akimirkoje, kai praktikuojame abi meditacijos rūšis: „aktyvus mąstymas“, kai mes apgalvotai nukreipiame savo mintis ir vaizduotę, kad mąstytume ir jaustumės pozityviai, ir „proto ilsinimas“, kai mes viską atpalaiduojame."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="PRADĖKITE MEDITUOTI"

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="1. PAUZĖ: susitelkite ties tuo, ką šiuo metu darai. Stebėk, ką galvoji ir kaip jautiesi."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="2. KVĖPAVIMAS: stebėkite savo natūralų kvėpavimą  - taip lavinate savo dėmesingumą."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="3. PAGALVOKITE: kokios mano mintys dabar?"

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="KUO DĖMESINGAS ĮSISĄMONINIMAS GALI JUMS PADĖTI:"

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Ar esate kada nors buvę blogos nuotaikos ir nesupratę, kodėl? Jūs galite praktikuoti dėmesingą įsisąmoninimą, kad ištirtumėte/išsiaiškintumėte, kas vyksta jūsų galvoje, ir kad pamatytumėte, kaip tai paveikia jūsų jausmus ir veiksmus."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Galite atpažinti ir paveikti neduodančias ramybės, pasikartojančias mintis, kurios prisideda prie streso."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Galite pakeisti įkyrius įpročius."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Galite sukurti erdvę tarp savo minčių ir reakcijų, kad liautumėtės darę neproduktyvius dalykus."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Galite sukurti ramybės ir geros savijautos jausmą stiprindami savo gerumą ir gailestingumą."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="KO TIKĖTIS:"

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Praktikuojant dėmesingą įsisąmoninimą, į paviršių iškyla įvairūs dalykai: mintys, jausmai, garsai ir fiziniai pojūčiai."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Kartais galite jaustis nepatogiai, kitais kartais viskas praeina labai lengvai ir puikiai jaučiatės."

                android:padding="@dimen/item_vertical_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:text="Nesirūpinkite – viskas yra šios patirties dalis. Svarbiausia atkreipti dėmesį ir stebėti, kas vyksta atvėrus protą, ir išmokti be reikalo nesijaudinti dėl kažko konkretaus. Jei įstringate, tiesiog sutelkite dėmesį į ką nors neutralaus, kaip, pavyzdžiui, savo kvėpavimą."

                android:padding="@dimen/item_vertical_padding"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>