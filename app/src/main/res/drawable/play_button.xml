<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <layer-list>
            <item android:right="7dp" android:top="7dp">
                <shape>
                    <corners android:radius="@dimen/play_button_w" />
                    <solid android:color="#77000000" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/playButtonPressed" />
                    <corners android:radius="200dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_play_arrow_black_48dp"
                android:width="@dimen/play_button_w"
                android:height="@dimen/play_button_w"
                android:gravity="center">
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:right="7dp" android:top="7dp">
                <shape>
                    <corners android:radius="@dimen/play_button_w" />
                    <solid android:color="#77000000" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/playButtonDefault" />
                    <corners android:radius="200dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_play_arrow_white_48dp"
                android:width="@dimen/play_button_w"
                android:height="@dimen/play_button_w"
                android:gravity="center">
            </item>
        </layer-list>
    </item>
</selector>