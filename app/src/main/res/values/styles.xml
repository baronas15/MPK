<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btnlook" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/material_text_button_min_width</item>
        <item name="android:layout_height">@dimen/material_text_button_height</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:textColor">@drawable/roundedbuttontext</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:paddingLeft">@dimen/material_text_button_padding</item>
        <item name="android:paddingRight">@dimen/material_text_button_padding</item>
        <item name="android:layout_marginLeft">@dimen/material_text_button_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/material_text_button_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/material_text_button_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/material_text_button_margin_vertical</item>
    </style>
    <style name="btnlookdark" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/material_text_button_min_width</item>
        <item name="android:layout_height">@dimen/material_text_button_height</item>
        <item name="android:background">@drawable/roundedbuttondark</item>
        <item name="android:textColor">@drawable/roundedbuttontextdark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:paddingLeft">@dimen/material_text_button_padding</item>
        <item name="android:paddingRight">@dimen/material_text_button_padding</item>
        <item name="android:layout_marginLeft">@dimen/material_text_button_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/material_text_button_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/material_text_button_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/material_text_button_margin_vertical</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/material_text_headline</item>
        <item name="android:paddingLeft">@dimen/check_vertical_padding</item>
        <item name="android:paddingRight">@dimen/check_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/material_text_button_padding</item>
        <item name="android:paddingTop">@dimen/material_text_button_padding</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="checkbox_landscape">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/material_text_headline</item>
        <item name="android:paddingLeft">@dimen/check_vertical_padding_landscape</item>
        <item name="android:paddingRight">@dimen/check_vertical_padding_landscape</item>
        <item name="android:paddingBottom">@dimen/check_vertical_padding_landscape</item>
        <item name="android:paddingTop">@dimen/check_vertical_padding_landscape</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="paragraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/item_vertical_padding</item>
        <item name="android:paddingRight">@dimen/item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/item_vertical_padding</item>
    </style>
    <style name="paragraph_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/item_vertical_padding</item>
        <item name="android:paddingRight">@dimen/item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/item_vertical_padding</item>
        <item name="android:paddingTop">@dimen/item_vertical_padding</item>
    </style>
</resources>